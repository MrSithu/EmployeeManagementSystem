@inherits DisplayEmployeeBase

<div class="card m-1" style="min-width: 18rem; max-width: 30%">
    <div class="card-header">
        <input type="checkbox" @onchange="checkBoxClicked"/>
        <span>@Employee.FirstName @Employee.LastName</span>
    </div>
    <img class="card-img-top imageThumbnail" src="@Employee.PhotoPath" />
    @if (ShowFooter)
    {
        <div class="card-footer" text-center>
            <a href="@($"employeedetails/{Employee.EmployeeId}")" class="btn btn-outline-primary" m-1>View</a>
            <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn btn-outline-primary" m-1>Edit</a>
            <button type="button" class="btn btn-outline-danger" @onclick="Delete_Click">
                Delete
            </button>
        </div>
    }

</div>